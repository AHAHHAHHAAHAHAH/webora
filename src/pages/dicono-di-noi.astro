---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { recensioni_pagina, integrazioni_esterne_API } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-48 pb-32 flex flex-col items-center justify-center text-center border-b border-white/5 overflow-hidden">
    <div class="absolute inset-0 z-0 bg-black">
      <img src={recensioni_pagina.sfondo_header} alt="Sfondo" class="w-full h-full object-cover opacity-20 blur-[1px]" />
      <div class="absolute inset-0 bg-gradient-to-t from-[var(--colorSfondo)] via-[var(--colorSfondo)]/60 to-transparent"></div>
    </div>
    <div class="relative z-10 px-4 reveal">
      <h1 class="text-5xl md:text-6xl font-bold text-[var(--colorNocciola)] mb-6 tracking-widest font-elegante uppercase drop-shadow-xl">
        {recensioni_pagina.titolo_pagina}
      </h1>
      <div class="w-24 h-px bg-[var(--colorRosso)] mx-auto mb-8"></div>
      <p class="text-gray-300 text-sm md:text-base font-light tracking-widest uppercase max-w-2xl leading-relaxed">
        {recensioni_pagina.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-24 bg-[var(--colorSfondo)]">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
      
      <div class="flex flex-col lg:flex-row items-center gap-12">
        
        <div class="w-full lg:w-1/3 flex flex-col items-center lg:items-start text-center lg:text-left reveal">
          <h2 class="text-3xl font-bold text-white tracking-widest uppercase font-elegante mb-4">
            {recensioni_pagina.titolo_sezione}
          </h2>
          <p class="text-gray-400 font-light leading-relaxed mb-8">
            {recensioni_pagina.descrizione_sezione}
          </p>
          
          <div class="flex flex-col gap-4 w-full sm:w-auto">
            <a href={recensioni_pagina.bottone_leggi_tutte.url} target="_blank" class="inline-block border border-[var(--colorNocciola)] text-[var(--colorNocciola)] px-8 py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] hover:text-black transition-all duration-300 shadow-[0_0_15px_rgba(212,175,55,0.2)] text-center w-full">
              {recensioni_pagina.bottone_leggi_tutte.testo}
            </a>

            <a href={recensioni_pagina.bottone_scrivi_recensione.url} target="_blank" class="inline-block bg-white text-black px-8 py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] transition-all duration-300 shadow-[0_10px_30px_rgba(255,255,255,0.1)] text-center w-full">
              {recensioni_pagina.bottone_scrivi_recensione.testo}
            </a>
          </div>
        </div>

        <div class="w-full lg:w-2/3 reveal min-h-[300px] bg-[var(--colorCard)] border border-white/5 p-4 rounded-sm shadow-2xl">
          <Fragment set:html={integrazioni_esterne_API.script_recensioni_google} />
        </div>

      </div>

    </div>
  </section>

</LayoutMaster>