---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { recensioni_complete } = siteData;

// Calcolo delle statistiche (come su Google)
const totaleRecensioni = recensioni_complete.length;
const mediaStelle = (recensioni_complete.reduce((acc, curr) => acc + curr.stelle, 0) / totaleRecensioni).toFixed(1);
const conteggioStelle:any = {
  5: recensioni_complete.filter(r => r.stelle === 5).length,
  4: recensioni_complete.filter(r => r.stelle === 4).length,
  3: recensioni_complete.filter(r => r.stelle === 3).length,
  2: recensioni_complete.filter(r => r.stelle === 2).length,
  1: recensioni_complete.filter(r => r.stelle === 1).length,
};
---

<LayoutMaster>
  
  <header class="relative pt-40 pb-20 flex flex-col items-center justify-center text-center border-b border-white/5 bg-gradient-to-b from-[#120d0b] to-[#0a0705]">
    <h1 class="text-5xl md:text-6xl font-bold text-[var(--colorNocciola)] mb-6 tracking-widest font-elegante uppercase reveal">
      La Voce dei Clienti
    </h1>
    <div class="w-24 h-px bg-[var(--colorRosso)] mx-auto mb-8 reveal"></div>
    <p class="text-gray-400 text-sm md:text-base font-light tracking-widest uppercase max-w-2xl leading-relaxed reveal px-4">
      Non chiediamo di crederci sulla parola. Leggi le esperienze reali di chi si Ã¨ seduto alla nostra tavola. Trasparenti. Autentiche.
    </p>
  </header>

  <section class="py-24 bg-[#0a0705]">
    <div class="max-w-6xl mx-auto px-4 lg:px-8 flex flex-col lg:flex-row gap-16">
      
      <div class="w-full lg:w-1/3 flex flex-col gap-10 reveal">
        
        <div class="bg-[#120d0b] border border-white/5 p-8 rounded-sm text-center shadow-2xl">
          <h2 class="text-6xl font-bold text-white font-elegante mb-2">{mediaStelle}</h2>
          <div class="flex justify-center text-[var(--colorNocciola)] mb-2">
            {[1,2,3,4,5].map(() => <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>)}
          </div>
          <p class="text-gray-500 text-xs tracking-widest uppercase">Su {totaleRecensioni} recensioni Google</p>
        </div>

        <div class="bg-[#120d0b] border border-white/5 p-8 rounded-sm shadow-2xl">
          <h3 class="text-white text-sm font-bold tracking-widest uppercase mb-6 border-b border-white/10 pb-4">Filtra per Stelle</h3>
          <div class="flex flex-col gap-4" id="filter-container">
            
            <button class="filter-btn active flex items-center justify-between group w-full text-left" data-filter="all">
              <span class="text-gray-300 text-sm font-bold uppercase tracking-wider group-hover:text-[var(--colorNocciola)] transition-colors">Tutte le recensioni</span>
              <span class="text-gray-600 text-xs">({totaleRecensioni})</span>
            </button>
            
            {[5,4,3,2,1].map((stella) => (
              <button class="filter-btn flex items-center justify-between group w-full" data-filter={stella.toString()}>
                <div class="flex items-center gap-3 w-full">
                  <span class="text-gray-400 text-sm w-16 group-hover:text-white transition-colors">{stella} Stelle</span>
                  <div class="flex-grow h-2 bg-black rounded-full overflow-hidden">
                    <div class="h-full bg-[var(--colorNocciola)] transition-all duration-1000" style={`width: ${(conteggioStelle[stella] / totaleRecensioni) * 100}%`}></div>
                  </div>
                </div>
                <span class="text-gray-600 text-xs ml-4 w-6 text-right">({conteggioStelle[stella]})</span>
              </button>
            ))}

          </div>
        </div>

        <a href="https://maps.google.com" target="_blank" class="w-full bg-white text-black text-center py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] transition-colors shadow-[0_10px_30px_rgba(255,255,255,0.1)]">
          Lascia una Recensione
        </a>
      </div>

      <div class="w-full lg:w-2/3 flex flex-col gap-6" id="reviews-list">
        {recensioni_complete.map((rec) => (
          <div class="review-card bg-[#15100d] border border-white/5 p-8 rounded-sm shadow-xl reveal transition-opacity duration-500" data-stars={rec.stelle}>
            
            <div class="flex justify-between items-start mb-6">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-[#2d221c] flex items-center justify-center text-[var(--colorNocciola)] font-elegante text-xl font-bold">
                  {rec.nome.charAt(0)}
                </div>
                <div>
                  <h4 class="text-white font-bold tracking-wider">{rec.nome}</h4>
                  <p class="text-gray-600 text-xs">{rec.data}</p>
                </div>
              </div>
              <div class="flex text-[var(--colorNocciola)]">
                {Array(rec.stelle).fill('').map(() => <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>)}
                {Array(5 - rec.stelle).fill('').map(() => <svg class="w-4 h-4 text-gray-800" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>)}
              </div>
            </div>

            <p class="text-gray-300 text-base leading-relaxed font-light italic mb-6">"{rec.testo}"</p>

            {rec.risposta_titolare && (
              <div class="bg-[#120d0b] border-l-2 border-[var(--colorRosso)] p-6 mt-4">
                <p class="text-white text-xs font-bold tracking-widest uppercase mb-2">Risposta dal Proprietario</p>
                <p class="text-gray-400 text-sm leading-relaxed font-light">{rec.risposta_titolare}</p>
              </div>
            )}
            
          </div>
        ))}

        <div id="no-reviews-msg" class="hidden text-center py-12 text-gray-500 font-light italic">
          Nessuna recensione trovata per questa categoria.
        </div>
      </div>

    </div>
  </section>

  <script>
    // @ts-nocheck
    document.addEventListener("DOMContentLoaded", function() {
      const filterBtns = document.querySelectorAll('.filter-btn');
      const reviewCards = document.querySelectorAll('.review-card');
      const noReviewsMsg = document.getElementById('no-reviews-msg');

      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          // 1. Rimuovi stato "attivo" da tutti i bottoni
          filterBtns.forEach(b => {
            b.classList.remove('text-[var(--colorNocciola)]');
            b.querySelector('span')?.classList.remove('text-[var(--colorNocciola)]');
          });
          
          // 2. Aggiungi stato "attivo" al bottone cliccato
          btn.classList.add('text-[var(--colorNocciola)]');
          btn.querySelector('span')?.classList.add('text-[var(--colorNocciola)]');

          const filterValue = btn.getAttribute('data-filter');
          let visibleCount = 0;

          // 3. Mostra/Nascondi le recensioni istantaneamente
          reviewCards.forEach(card => {
            const cardStars = card.getAttribute('data-stars');
            
            if (filterValue === 'all' || cardStars === filterValue) {
              card.style.display = 'block';
              setTimeout(() => card.style.opacity = '1', 50); // Effetto fade-in
              visibleCount++;
            } else {
              card.style.opacity = '0';
              setTimeout(() => card.style.display = 'none', 300); // Nascondi dopo il fade-out
            }
          });

          // 4. Mostra messaggio "vuoto" se non ci sono recensioni
          if (visibleCount === 0) {
            setTimeout(() => { noReviewsMsg.classList.remove('hidden'); }, 300);
          } else {
            noReviewsMsg.classList.add('hidden');
          }
        });
      });
    });
  </script>

</LayoutMaster>