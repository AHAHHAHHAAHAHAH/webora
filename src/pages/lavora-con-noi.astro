---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const sfondo = siteData.sfondi_sezioni.recensioni;
---

<LayoutMaster>
  
  <header class="relative pt-48 pb-32 flex flex-col items-center justify-center text-center border-b border-white/5 overflow-hidden">
    <div class="absolute inset-0 z-0 bg-black">
      <img src={sfondo} alt="Sfondo Lavora con noi" class="w-full h-full object-cover opacity-20 blur-[1px]" />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0a0705] via-[#0a0705]/60 to-transparent"></div>
    </div>
    <div class="relative z-10 px-4 reveal">
      <h1 class="text-5xl md:text-6xl font-bold text-[var(--colorNocciola)] mb-6 tracking-widest font-elegante uppercase drop-shadow-xl">
        Unisciti al Team
      </h1>
      <div class="w-24 h-px bg-[var(--colorRosso)] mx-auto mb-8"></div>
      <p class="text-gray-300 text-sm md:text-base font-light tracking-widest uppercase max-w-2xl leading-relaxed">
        Siamo sempre alla ricerca di talenti appassionati. Compila il modulo e inviaci il tuo CV.
      </p>
    </div>
  </header>

  <section class="py-24 bg-[#0a0705]">
    <div class="max-w-3xl mx-auto px-4 lg:px-8 reveal">
      
      <div class="bg-[#120d0b] border border-white/5 p-8 md:p-12 rounded-sm shadow-2xl">
        <h2 class="text-2xl font-bold text-white tracking-widest uppercase font-elegante mb-8 text-center">Invia la tua Candidatura</h2>
        
        <form action="https://formsubmit.co/flexedit56@gmail.com" method="POST" enctype="multipart/form-data" class="space-y-6">
          
          <input type="hidden" name="_subject" value="Nuova Candidatura dal Sito Web!">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_template" value="table">

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
              <label for="Nome" class="text-[var(--colorNocciola)] text-xs tracking-widest uppercase mb-2">Nome e Cognome *</label>
              <input type="text" name="Nome" id="Nome" required class="bg-black/50 border border-white/10 text-white px-4 py-3 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors">
            </div>
            <div class="flex flex-col">
              <label for="Email" class="text-[var(--colorNocciola)] text-xs tracking-widest uppercase mb-2">Email *</label>
              <input type="email" name="Email" id="Email" required class="bg-black/50 border border-white/10 text-white px-4 py-3 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors">
            </div>
          </div>

          <div class="flex flex-col">
            <label for="Posizione" class="text-[var(--colorNocciola)] text-xs tracking-widest uppercase mb-2">Posizione Desiderata *</label>
            <input type="text" name="Posizione" id="Posizione" placeholder="Es: Sommelier, Cameriere, Cuoco..." required class="bg-black/50 border border-white/10 text-white px-4 py-3 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors">
          </div>

          <div class="flex flex-col">
            <label for="Lettera_Presentazione" class="text-[var(--colorNocciola)] text-xs tracking-widest uppercase mb-2">Lettera di Presentazione *</label>
            <textarea name="Lettera_Presentazione" id="Lettera_Presentazione" rows="4" required class="bg-black/50 border border-white/10 text-white px-4 py-3 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors"></textarea>
          </div>

          <div class="flex flex-col">
            <label for="CV_Allegato" class="text-[var(--colorNocciola)] text-xs tracking-widest uppercase mb-2">Allega il tuo CV (PDF o Word) *</label>
            <input type="file" name="CV_Allegato" id="CV_Allegato" accept=".pdf,.doc,.docx" required class="bg-black/50 border border-white/10 text-gray-400 px-4 py-3 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-sm file:border-0 file:text-xs file:font-bold file:uppercase file:tracking-widest file:bg-[var(--colorNocciola)] file:text-black hover:file:bg-white file:transition-colors file:cursor-pointer cursor-pointer">
          </div>

          <div class="pt-6 text-center">
            <button type="submit" class="inline-block bg-white text-black px-12 py-5 font-bold tracking-widest uppercase text-sm hover:bg-[var(--colorNocciola)] transition-colors duration-300 shadow-[0_10px_30px_rgba(255,255,255,0.1)] w-full sm:w-auto">
              Invia Candidatura
            </button>
          </div>

        </form>
      </div>

    </div>
  </section>

</LayoutMaster>