---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { lavora_con_noi, integrazioni_esterne_API } = siteData;
---

<LayoutMaster>
  
  <header class="pt-40 pb-20 flex flex-col items-center text-center border-b border-white/5 bg-black">
    <div class="px-4 reveal">
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--colorNocciola)] mb-4 tracking-widest font-elegante uppercase drop-shadow-xl">
        {lavora_con_noi.titolo_pagina}
      </h1>
      <div class="w-16 h-px bg-[var(--colorRosso)] mx-auto mb-6"></div>
      <p class="text-gray-300 text-xs md:text-sm font-light tracking-widest uppercase max-w-xl leading-relaxed">
        {lavora_con_noi.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-24 bg-[var(--colorSfondo)]">
    <div class="max-w-3xl mx-auto px-4 lg:px-8 reveal">
      <div class="bg-[var(--colorCard)] p-8 md:p-12 rounded-sm border border-white/5 shadow-2xl">
        
        <form action={`https://formsubmit.co/${integrazioni_esterne_API.email_ricezione_form}`} method="POST" class="flex flex-col gap-6">
          <input type="hidden" name="_subject" value="Nuova Candidatura dal Sito Web!">
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_next" value={siteData.impostazioni_sito.dominio_sito}>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col gap-2">
              <label class="text-[var(--colorNocciola)] text-[10px] uppercase tracking-widest font-bold">Nome e Cognome</label>
              <input type="text" name="Nome" required class="bg-black/50 border border-white/10 text-white p-4 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors text-sm" placeholder="Il tuo nome">
            </div>
            <div class="flex flex-col gap-2">
              <label class="text-[var(--colorNocciola)] text-[10px] uppercase tracking-widest font-bold">Email</label>
              <input type="email" name="Email" required class="bg-black/50 border border-white/10 text-white p-4 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors text-sm" placeholder="La tua email">
            </div>
          </div>

          <div class="flex flex-col gap-2">
            <label class="text-[var(--colorNocciola)] text-[10px] uppercase tracking-widest font-bold">Posizione di Interesse</label>
            <select name="Ruolo" required class="bg-black/50 border border-white/10 text-white p-4 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors text-sm appearance-none cursor-pointer">
              <option value="" disabled selected>Seleziona un ruolo</option>
              {lavora_con_noi.posizioni_aperte.map((ruolo) => (
                <option value={ruolo}>{ruolo}</option>
              ))}
            </select>
          </div>

          <div class="flex flex-col gap-2">
            <label class="text-[var(--colorNocciola)] text-[10px] uppercase tracking-widest font-bold">Presentazione e Link al CV</label>
            <textarea name="Messaggio" rows="4" required class="bg-black/50 border border-white/10 text-white p-4 focus:outline-none focus:border-[var(--colorNocciola)] transition-colors text-sm resize-none" placeholder="Inserisci il link al tuo CV (Google Drive, LinkedIn) e raccontaci di te..."></textarea>
          </div>

          <button type="submit" class="mt-4 bg-[var(--colorNocciola)] text-black px-10 py-5 font-bold tracking-widest uppercase text-xs hover:bg-white transition-colors shadow-lg w-full">
            Invia Candidatura
          </button>
        </form>

      </div>
    </div>
  </section>

</LayoutMaster>