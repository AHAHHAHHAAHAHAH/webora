---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { catalogo } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-48 pb-32 flex flex-col items-center justify-center text-center border-b border-white/5 overflow-hidden">
    <div class="absolute inset-0 z-0 bg-black">
      <img src={catalogo.sfondo_header} alt="Sfondo Menu Fotografico" class="w-full h-full object-cover opacity-20 blur-[1px]" />
      <div class="absolute inset-0 bg-gradient-to-t from-[var(--colorSfondo)] via-[var(--colorSfondo)]/60 to-transparent"></div>
    </div>
    <div class="relative z-10 px-4 reveal">
      <h1 class="text-4xl md:text-6xl font-bold text-[var(--colorNocciola)] mb-4 tracking-widest font-elegante uppercase drop-shadow-xl">
        L'Esperienza Visiva
      </h1>
      <div class="w-16 h-px bg-[var(--colorRosso)] mx-auto mb-6"></div>
      <p class="text-gray-300 text-xs md:text-sm font-light tracking-widest uppercase max-w-xl leading-relaxed">
        {catalogo.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-20 bg-[var(--colorSfondo)] min-h-screen">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">

      {catalogo.categorie.map((categoria) => (
        <div class="mb-24 reveal">
          <div class="text-center mb-12">
            <h2 class="text-3xl text-white font-elegante uppercase tracking-widest mb-4">{categoria.nome_categoria}</h2>
            <div class="w-12 h-px bg-[var(--colorNocciola)] mx-auto"></div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {categoria.elementi.map((item) => (
              <div class="bg-[var(--colorCard)] border border-white/5 rounded-sm overflow-hidden group shadow-2xl">
                <div class="h-64 overflow-hidden relative">
                  <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors z-10"></div>
                  <img src={item.immagine} alt={item.titolo} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" />
                </div>
                <div class="p-8">
                  <div class="flex justify-between items-start mb-4">
                    <h3 class="text-white font-bold tracking-wider uppercase text-sm">{item.titolo}</h3>
                    <span class="text-[var(--colorNocciola)] font-bold">{item.prezzo}</span>
                  </div>
                  <p class="text-gray-500 text-xs font-light leading-relaxed">{item.descrizione}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}

      <div class="mt-20 text-center reveal border-t border-white/5 pt-12">
        <a href="/menu" class="inline-block bg-white text-black px-10 py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] transition-all duration-300 shadow-[0_10px_30px_rgba(255,255,255,0.1)]">
          Torna al Listino Rapido
        </a>
      </div>

    </div>
  </section>

</LayoutMaster>