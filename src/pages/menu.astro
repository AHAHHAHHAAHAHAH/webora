---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { catalogo } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-40 pb-24 flex flex-col items-center justify-center text-center bg-[var(--card)] border-b border-[var(--text-main)]/5">
    <div class="relative z-10 px-6 reveal max-w-3xl">
      <h1 class="text-4xl md:text-6xl font-bold text-[var(--text-main)] mb-6 font-serif-luxury">
        {catalogo.titolo_pagina}
      </h1>
      <p class="text-[var(--text-muted)] text-base md:text-lg font-light leading-relaxed">
        {catalogo.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-16 bg-[var(--bg)] min-h-screen relative">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 pb-32">

      {catalogo.categorie.map((categoria) => (
        <details class="group mb-6 bg-[var(--card)] rounded-2xl border border-[var(--text-main)]/10 shadow-lg overflow-hidden reveal">
          
          <summary class="flex justify-between items-center p-6 md:p-8 cursor-pointer list-none outline-none select-none hover:bg-white/5 transition-colors">
            <h2 class="text-2xl md:text-3xl text-[var(--text-main)] font-serif-luxury font-bold">
              {categoria.nome_categoria}
            </h2>
            
            <div class="w-10 h-10 rounded-full bg-[var(--bg)] border border-[var(--primary)]/30 flex items-center justify-center text-[var(--primary)] transition-all duration-300 group-open:rotate-180 group-open:bg-[var(--primary)] group-open:text-black shadow-inner">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </div>
          </summary>
          
          <div class="p-6 md:p-8 pt-0 border-t border-[var(--text-main)]/5 mt-2 bg-[var(--bg)]/30">
            <div class="grid grid-cols-1 gap-6 pt-6">
              {categoria.elementi.map((item) => (
                <div class="flex flex-col sm:flex-row gap-6 bg-[var(--card)] p-5 rounded-2xl shadow-sm border border-[var(--text-main)]/5 hover:shadow-md transition-shadow">
                  
                  {item.immagine && (
                    <img src={item.immagine} alt={item.titolo} class="w-full sm:w-36 h-48 sm:h-32 object-cover rounded-xl border border-[var(--text-main)]/5" />
                  )}
                  
                  <div class="flex-1 flex flex-col justify-center">
                    <div class="flex justify-between items-start mb-2 gap-4">
                      <h3 class="text-[var(--text-main)] font-bold text-lg leading-tight">{item.titolo}</h3>
                      <span class="text-black font-bold bg-[var(--primary)] px-3 py-1 rounded-md text-sm whitespace-nowrap shadow-sm border border-black/10">
                        {item.prezzo}
                      </span>
                    </div>
                    <p class="text-[var(--text-muted)] text-sm font-light leading-relaxed">{item.descrizione}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </details>
      ))}

    </div>
  </section>

  {catalogo.impostazioni_pagina?.mostra_barra_pagamento && catalogo.barra_software_esterno?.attiva && (
    <div class="fixed bottom-0 left-0 w-full bg-[var(--card)] border-t border-[var(--text-main)]/10 z-50 shadow-[0_-10px_30px_rgba(0,0,0,0.3)] p-4">
      <div class="max-w-4xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-center md:text-left">
          <p class="text-[var(--text-main)] text-base font-bold tracking-wide">{catalogo.barra_software_esterno.testo_domanda}</p>
          <p class="text-[var(--text-muted)] text-xs hidden md:block">{catalogo.barra_software_esterno.testo_sottotitolo}</p>
        </div>
        <a href={catalogo.barra_software_esterno.link_software} target="_blank" class="btn-primary w-full md:w-auto">
          {catalogo.barra_software_esterno.testo_bottone}
        </a>
      </div>
    </div>
  )}

</LayoutMaster>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
</style>