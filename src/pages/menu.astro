---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { catalogo } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-40 pb-24 flex flex-col items-center justify-center text-center bg-[var(--card)] border-b border-[var(--text-main)]/5">
    <div class="relative z-10 px-6 reveal max-w-3xl">
      <h1 class="text-4xl md:text-6xl font-bold text-[var(--text-main)] mb-6 font-serif-luxury">
        {catalogo.titolo_pagina}
      </h1>
      <p class="text-[var(--text-muted)] text-base md:text-lg font-light leading-relaxed">
        {catalogo.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-16 bg-[var(--bg)] min-h-screen relative">
    <div class="max-w-5xl mx-auto px-6 lg:px-8 pb-32">

      {catalogo.categorie.map((categoria) => (
        <div class="mb-20 reveal">
          <h2 class="text-3xl text-[var(--text-main)] font-serif-luxury font-bold border-b-2 border-[var(--primary)] pb-4 mb-8 inline-block">
            {categoria.nome_categoria}
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {categoria.elementi.map((item) => (
              <div class="flex flex-col sm:flex-row gap-6 bg-[var(--card)] p-4 rounded-2xl shadow-sm border border-[var(--text-main)]/5 hover:shadow-md transition-shadow">
                {item.immagine && (
                  <img src={item.immagine} alt={item.titolo} class="w-full sm:w-32 h-48 sm:h-32 object-cover rounded-xl" />
                )}
                <div class="flex-1 flex flex-col justify-center">
                  <div class="flex justify-between items-start mb-2">
                    <h3 class="text-[var(--text-main)] font-bold text-lg">{item.titolo}</h3>
                    <span class="text-[var(--primary)] font-bold bg-[var(--primary)]/10 px-3 py-1 rounded-full text-sm">{item.prezzo}</span>
                  </div>
                  <p class="text-[var(--text-muted)] text-sm font-light leading-relaxed">{item.descrizione}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}

    </div>
  </section>

  {catalogo.barra_software_esterno.attiva && (
    <div class="fixed bottom-0 left-0 w-full bg-[var(--card)] border-t border-[var(--text-main)]/10 z-50 shadow-[0_-10px_30px_rgba(0,0,0,0.05)] p-4">
      <div class="max-w-5xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-center md:text-left">
          <p class="text-[var(--text-main)] text-base font-bold">{catalogo.barra_software_esterno.testo_domanda}</p>
          <p class="text-[var(--text-muted)] text-xs hidden md:block">{catalogo.barra_software_esterno.testo_sottotitolo}</p>
        </div>
        <a href={catalogo.barra_software_esterno.link_software} target="_blank" class="btn-primary w-full md:w-auto">
          {catalogo.barra_software_esterno.testo_bottone}
        </a>
      </div>
    </div>
  )}

</LayoutMaster>