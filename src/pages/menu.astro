---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { catalogo } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-28 pb-12 flex flex-col items-center justify-center text-center bg-[var(--card)] border-b border-[var(--text-main)]/5">
    <div class="relative z-10 px-6 reveal max-w-3xl">
      <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-main)] mb-3 font-serif-luxury">
        {catalogo.titolo_pagina}
      </h1>
      <p class="text-[var(--text-muted)] text-xs md:text-sm font-light leading-relaxed">
        {catalogo.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-12 bg-[var(--bg)] min-h-screen relative">
    <div class="max-w-3xl mx-auto px-4 lg:px-8 pb-32">

      {catalogo.categorie.map((categoria) => (
        <details class="group mb-4 bg-[var(--card)] rounded-xl border border-[var(--text-main)]/10 shadow-md overflow-hidden reveal">
          
          <summary class="flex justify-between items-center p-4 md:p-5 cursor-pointer list-none outline-none select-none hover:bg-white/5 transition-colors">
            <h2 class="text-lg md:text-xl text-[var(--text-main)] font-serif-luxury font-bold">
              {categoria.nome_categoria}
            </h2>
            
            <div class="w-8 h-8 rounded-full bg-[var(--bg)] border border-[var(--primary)]/30 flex items-center justify-center text-[var(--primary)] transition-all duration-300 group-open:rotate-180 group-open:bg-[var(--primary)] group-open:text-black shadow-inner flex-shrink-0 ml-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </div>
          </summary>
          
          <div class="p-3 md:p-5 pt-0 border-t border-[var(--text-main)]/5 mt-1 bg-[var(--bg)]/30">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 pt-4">
              {categoria.elementi.map((item) => (
                <div class="flex items-start gap-4 bg-[var(--card)] p-3 rounded-xl shadow-sm border border-[var(--text-main)]/5 hover:border-[var(--primary)]/30 transition-colors">
                  
                  {item.immagine ? (
                    <img src={item.immagine} alt={item.titolo} class="w-20 h-20 min-w-[5rem] object-cover rounded-lg border border-[var(--text-main)]/10" />
                  ) : (
                    <div class="w-20 h-20 min-w-[5rem] bg-[var(--bg)] rounded-lg border border-[var(--text-main)]/10 flex items-center justify-center">
                      <svg class="w-6 h-6 text-[var(--text-muted)] opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    </div>
                  )}
                  
                  <div class="flex-1 flex flex-col justify-center py-1">
                    <div class="flex justify-between items-start gap-2 mb-1">
                      <h3 class="text-[var(--text-main)] font-bold text-sm leading-tight pr-2">{item.titolo}</h3>
                      <span class="text-black font-bold bg-[var(--primary)] px-2 py-0.5 rounded text-xs whitespace-nowrap shadow-sm border border-black/10">
                        {item.prezzo}
                      </span>
                    </div>
                    <p class="text-[var(--text-muted)] text-xs font-light leading-relaxed line-clamp-2">{item.descrizione}</p>
                  </div>

                </div>
              ))}
            </div>
          </div>
        </details>
      ))}

    </div>
  </section>

  {catalogo.impostazioni_pagina?.mostra_barra_pagamento && catalogo.barra_software_esterno?.attiva && (
    <div class="fixed bottom-0 left-0 w-full bg-[var(--card)] border-t border-[var(--text-main)]/10 z-50 shadow-[0_-10px_30px_rgba(0,0,0,0.3)] p-3">
      <div class="max-w-4xl mx-auto flex flex-row justify-between items-center gap-4">
        <div class="text-left flex-1 hidden sm:block">
          <p class="text-[var(--text-main)] text-sm font-bold tracking-wide">{catalogo.barra_software_esterno.testo_domanda}</p>
        </div>
        <a href={catalogo.barra_software_esterno.link_software} target="_blank" class="btn-primary w-full sm:w-auto text-xs py-3 px-6 m-0">
          {catalogo.barra_software_esterno.testo_bottone}
        </a>
      </div>
    </div>
  )}

</LayoutMaster>

<style>
  summary::-webkit-details-marker { display: none; }
</style>