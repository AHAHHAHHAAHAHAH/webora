---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { home_page } = siteData;
---

<LayoutMaster>
  
  <section class="relative h-screen flex flex-col items-center justify-center text-center overflow-hidden">
    <div class="absolute inset-0 z-0 bg-black">
      <img src={home_page.sfondo_hero} alt="Hero" class="w-full h-full object-cover opacity-60 scale-105 origin-center animate-[pulse_10s_ease-in-out_infinite]" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/30 to-[var(--bg)]"></div>
    </div>
    
    <div class="relative z-10 px-6 flex flex-col items-center mt-16 w-full max-w-4xl mx-auto">
      <span class="inline-block px-4 py-1 rounded-full border border-[var(--primary)] text-[var(--primary)] text-xs md:text-sm uppercase tracking-widest font-bold mb-6 backdrop-blur-md bg-black/20">
        {home_page.testo_badge}
      </span>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 font-serif-luxury leading-tight drop-shadow-lg">
        {home_page.titolo_principale}
      </h1>
      <p class="text-gray-200 text-base md:text-xl font-light max-w-2xl leading-relaxed mb-10 drop-shadow-md">
        {home_page.descrizione_principale}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
        {home_page.bottoni_hero.map((bottone, index) => (
          <a href={bottone.url} class={index === 0 ? 'btn-primary' : 'btn-outline border-white text-white hover:bg-white hover:text-black shadow-lg backdrop-blur-sm bg-white/10'}>
            {bottone.testo}
          </a>
        ))}
      </div>
    </div>
  </section>

  {home_page.banner_tattico.attivo && (
    <section class="bg-[var(--primary)] py-4 text-center px-4">
      <a href={home_page.banner_tattico.url} class="text-white font-semibold text-sm md:text-base hover:opacity-80 transition-opacity flex items-center justify-center gap-2">
        <span>{home_page.banner_tattico.testo}</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
      </a>
    </section>
  )}

  {home_page.griglia_servizi && (
    <section class="py-24 bg-[var(--bg)]">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        
        <div class="text-center mb-16 reveal">
          <h2 class="text-3xl md:text-4xl text-[var(--text-main)] font-serif-luxury font-bold mb-4">La Nostra Esperienza</h2>
          <div class="w-16 h-1 bg-[var(--primary)] mx-auto rounded-full"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 reveal">
          {home_page.griglia_servizi.map((servizio) => (
            <a href={servizio.url} class="group block relative h-[400px] rounded-2xl overflow-hidden shadow-xl shadow-[var(--text-main)]/5 bg-[var(--card)]">
              <img src={servizio.immagine} alt={servizio.titolo} class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
              <div class="absolute bottom-0 left-0 p-8 w-full">
                <h3 class="text-white text-2xl font-serif-luxury font-bold mb-2 transform translate-y-2 group-hover:translate-y-0 transition-transform">{servizio.titolo}</h3>
                <p class="text-[var(--primary)] text-sm font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center gap-2">
                  {servizio.testo_link} <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

</LayoutMaster>