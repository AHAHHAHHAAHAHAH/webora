---
import LayoutMaster from '../layouts/LayoutMaster.astro';
import siteData from '../data.json';
const { prenotazioni } = siteData;
---

<LayoutMaster>
  
  <header class="relative pt-48 pb-32 flex flex-col items-center justify-center text-center border-b border-white/5 overflow-hidden">
    <div class="absolute inset-0 z-0 bg-black">
      <img src={prenotazioni.sfondo_header} alt="Sfondo Prenotazioni" class="w-full h-full object-cover opacity-20 blur-[1px]" />
      <div class="absolute inset-0 bg-gradient-to-t from-[var(--colorSfondo)] via-[var(--colorSfondo)]/60 to-transparent"></div>
    </div>
    <div class="relative z-10 px-4 reveal">
      <h1 class="text-5xl md:text-6xl font-bold text-[var(--colorNocciola)] mb-6 tracking-widest font-elegante uppercase drop-shadow-xl">
        {prenotazioni.titolo_pagina}
      </h1>
      <div class="w-24 h-px bg-[var(--colorRosso)] mx-auto mb-8"></div>
      <p class="text-gray-300 text-sm md:text-base font-light tracking-widest uppercase max-w-2xl leading-relaxed">
        {prenotazioni.sottotitolo_pagina}
      </p>
    </div>
  </header>

  <section class="py-24 bg-[var(--colorSfondo)]">
    <div class="max-w-6xl mx-auto px-4 lg:px-8 reveal">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <div class="bg-[var(--colorCard)] border border-white/5 p-10 flex flex-col items-center text-center rounded-sm shadow-2xl relative overflow-hidden group">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[var(--colorNocciola)] to-transparent opacity-50"></div>
          
          <h2 class="text-3xl font-bold text-white tracking-widest uppercase font-elegante mb-4">{prenotazioni.blocco_1_sede.titolo}</h2>
          <p class="text-gray-400 font-light leading-relaxed mb-8">
            {prenotazioni.blocco_1_sede.descrizione}
          </p>
          
          <a href={prenotazioni.blocco_1_sede.link_azione} target="_blank" class="mt-auto inline-block border border-[var(--colorNocciola)] text-[var(--colorNocciola)] px-10 py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] hover:text-black transition-all duration-300 shadow-[0_0_15px_rgba(212,175,55,0.2)] w-full sm:w-auto">
            {prenotazioni.blocco_1_sede.testo_bottone}
          </a>
        </div>

        <div class="bg-[var(--colorCard)] border border-white/5 p-10 flex flex-col items-center text-center rounded-sm shadow-2xl relative overflow-hidden group">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[var(--colorRosso)] to-transparent opacity-50"></div>
          
          <h2 class="text-3xl font-bold text-white tracking-widest uppercase font-elegante mb-4">{prenotazioni.blocco_2_domicilio.titolo}</h2>
          <p class="text-gray-400 font-light leading-relaxed mb-8">
            {prenotazioni.blocco_2_domicilio.descrizione}
          </p>
          
          <div class="flex flex-col gap-4 mt-auto w-full sm:w-auto">
            <a href={prenotazioni.blocco_2_domicilio.link_azione_diretta} target="_blank" class="inline-block bg-white text-black px-10 py-4 font-bold tracking-widest uppercase text-xs hover:bg-[var(--colorNocciola)] transition-all duration-300 shadow-[0_10px_30px_rgba(255,255,255,0.1)] w-full">
              {prenotazioni.blocco_2_domicilio.testo_bottone_diretto}
            </a>
            
            {prenotazioni.blocco_2_domicilio.usa_app_terze && (
              <a href={prenotazioni.blocco_2_domicilio.link_app_esterna} target="_blank" class="inline-block border border-white/20 text-white px-10 py-4 font-bold tracking-widest uppercase text-xs hover:border-white transition-all duration-300 w-full">
                {prenotazioni.blocco_2_domicilio.testo_bottone_app}
              </a>
            )}
          </div>
        </div>

      </div>

    </div>
  </section>

</LayoutMaster>